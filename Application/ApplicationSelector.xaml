<Window x:Class="Keymeleon.ApplicationSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keymeleon"
        mc:Ignorable="d"
        Title="ApplicationSelector" Height="300" MinWidth="300"
        SizeToContent="Width">
    
    <!-- TODO; generate list of installed / open applications -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="textBlock">Current Applications</TextBlock>
            <Button Click="ToggleList" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image x:Name="expandImg" Source="Resources/Expand.png"/>
            </Button>
        </StackPanel>
        <ListView x:Name="applicationList" MaxHeight="220" SelectionChanged="applicationList_SelectionChanged"></ListView>
        <Button x:Name="btnSubmit" Content="Ok" Click="Submit" Width="80"/>
    </StackPanel>
</Window>