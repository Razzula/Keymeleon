<Window x:Class="Keymeleon.PopupConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keymeleon"
        mc:Ignorable="d"
        Title="PopupConfirmation" SizeToContent="WidthAndHeight" MinWidth="200" MinHeight="122"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <TextBlock x:Name="msgBlock" Text="Test"  Margin="20,20,20,50" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Content="No" Click="Negative_Click" Width="80" Height="32" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,9,9" />
        <Button Content="Yes" Click="Affirmative_Click" Width="80" Height="32" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,110,9" />
    </Grid>
</Window>
